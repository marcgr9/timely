#!/bin/bash

time=-1
extra_time=-1
main_path=""

function load_config {
    while read -r line
    do
        IFS=' '    
        read -a kv <<< "$line"
        
        k="${kv[0]}"
        v="${kv[1]}"
        case "$k" in
        time)
            time="$v"
            ;;
        extra)
            extra_time="$v"
            ;;
        path)
            main_path="$v"
            ;;
        *)
            echo "unknown setting $k"
            ;;
        esac

    done < "/usr/local/etc/timely/.preferences"
}

usage="usage: timely <add | remove | set | preferences> [executable | minutes]"
usage_add="usage: timely add [executable]"
usage_remove="usage: timely remove [full path to executable]"
usage_list="usage: timely list"

if [ $# -lt 1 ]; then
    echo "$usage"
    exit 1
fi

load_config


if ! [[ "$time" =~ ^[0-9]+$ ]] || ! [[ "$extra_time" =~ ^[0-9]+$ ]] ||  [ "$time" -eq -1 ] || [ "$extra_time" -eq -1 ]; then
    echo "aborting - bad config file"
    exit 1
fi

if [ $1 == "add" ]; then
    if [ $# -eq 2 ] && [ -f "$2" ] && [ -x "$2" ]; then
        path=$(cd "$(dirname "$2")" && pwd)/$(basename "$2")
        # path=`find $PWD -type f | grep "\/$2$"`
        escapedPath=$(echo $path | sed 's_/_\\/_g')

        if grep -q "$path" "$main_path/.timelies"; then
            echo "Timely already exists"
            exit 1
        fi

        mv "$2" "$2-real"
        touch "$2"
        echo "" > "$2"
 
        cat $main_path/base_script > "$2"        
        echo `cat "$2" | sed "s/{FILE}/$escapedPath-real/" | sed "s/{TIME}/$time/" | sed "s/{EXTRA}/$extra_time/"` > "$2" 
        
        echo "$path" >> $main_path/.timelies
        
        chmod +x "$2"
        echo "Created retsrictions for $(basename $2)"
    else
        echo "$usage_add"
    fi

elif [ $1 == "list" ]; then
    echo "You have `wc -l "$main_path/.timelies" | awk '{print $1}'` timelies"
    cat "$main_path/.timelies"

elif [ $1 == "remove" ]; then
    if [ $# -eq 2 ]; then
        if grep -q "^$2$" "$main_path/.timelies"; then
            grep -v "^$2$" "$main_path/.timelies" > "$main_path/.temp"; mv "$main_path/.temp" "$main_path/.timelies"
            
            rm "$2"
            mv "$2-real" "$2"
            echo "Restrictions removed for $(basename $2)"
        else
            echo "Timely not found"
        fi
    else
        echo "$usage_remove"
    fi
elif [ $1 == "set" ]; then
    if [ $# -eq 3 ]; then
        if grep -q "^$2 " "$main_path/.preferences"; then
            echo `sed "/^$2 /d" "$main_path/.preferences"` > "$main_path/.preferences"
            echo "$2 $3" >> "$main_path/.preferences"
            echo "$1 updated to $2"
        else
            echo "That's not an existing setting"
        fi
    fi
elif [ $1 == "preferences" ]; then 
    cat "$main_path/.preferences"
else
    echo "$usage"
fi
